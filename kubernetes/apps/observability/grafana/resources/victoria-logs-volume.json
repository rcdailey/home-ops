{
  "id": null,
  "uid": "victorialogs-volume",
  "title": "VictoriaLogs - Log Volume Analysis",
  "tags": ["victorialogs", "logs", "observability"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "refresh": "30s",
  "time": {"from": "now-1h", "to": "now"},
  "timepicker": {"refresh_intervals": ["30s", "1m", "5m", "15m", "30m", "1h"]},
  "panels": [
    {
      "type": "row",
      "id": 1,
      "title": "Log Volume Overview",
      "gridPos": {"x": 0, "y": 0, "w": 24, "h": 1},
      "collapsed": false
    },
    {
      "type": "timeseries",
      "id": 2,
      "title": "Log Rate by Namespace",
      "gridPos": {"x": 0, "y": 1, "w": 12, "h": 12},
      "datasource": {"type": "victorialogs-datasource", "uid": "VictoriaLogs"},
      "targets": [{"expr": "* | stats by (namespace) count() as logs", "refId": "A", "legendFormat": "{{namespace}}", "queryType": "statsRange"}],
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["last", "sum"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      },
      "fieldConfig": {"defaults": {"custom": {"drawStyle": "line", "fillOpacity": 10}, "unit": "cps"}}
    },
    {
      "type": "timeseries",
      "id": 3,
      "title": "Log Rate by App",
      "gridPos": {"x": 12, "y": 1, "w": 12, "h": 12},
      "datasource": {"type": "victorialogs-datasource", "uid": "VictoriaLogs"},
      "targets": [{"expr": "* | stats by (app) count() as logs", "refId": "A", "legendFormat": "{{app}}", "queryType": "statsRange"}],
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["last", "sum"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      },
      "fieldConfig": {"defaults": {"custom": {"drawStyle": "line", "fillOpacity": 10}, "unit": "cps"}}
    },
    {
      "type": "timeseries",
      "id": 8,
      "title": "Log Level Trends",
      "gridPos": {"x": 0, "y": 13, "w": 24, "h": 12},
      "datasource": {"type": "victorialogs-datasource", "uid": "VictoriaLogs"},
      "targets": [{"expr": "* | stats by (level) count() as logs", "refId": "A", "legendFormat": "{{level}}", "queryType": "statsRange"}],
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["last", "sum"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      },
      "fieldConfig": {"defaults": {"custom": {"drawStyle": "line", "fillOpacity": 20, "stacking": {"mode": "normal"}}, "unit": "cps"}}
    }
  ],
  "templating": {"list": []},
  "annotations": {"list": []},
  "schemaVersion": 39,
  "version": 2
}
