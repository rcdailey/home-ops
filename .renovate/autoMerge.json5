{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Auto-merge GitHub Actions",
      matchManagers: ["github-actions"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch", "digest"],
      minimumReleaseAge: "3 days",
      ignoreTests: true
    },
    {
      description: "Auto-merge Mise Tools (except Python)",
      matchManagers: ["mise"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch"],
      ignoreTests: true
    },
    {
      // Python minor version updates frequently introduce breaking changes to stdlib APIs
      // Example: Python 3.14's BooleanOptionalAction no longer accepts 'type' parameter,
      // breaking flux-local and other tools. Only auto-merge patch versions (security fixes).
      description: "Disable auto-merge for Mise Python minor/major updates",
      matchManagers: ["mise"],
      matchPackageNames: ["python"],
      automerge: false,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "major"]
    },
    {
      description: "Auto-merge container patch and digest updates",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["patch", "digest"],
      ignoreTests: false
    },
    {
      description: "Auto-merge OCI Charts",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: ["/victoria-metrics-k8s-stack/", "/grafana/"],
      ignoreTests: false
    },
    {
      description: "Auto-merge app-template chart updates",
      matchDatasources: ["helm"],
      matchPackageNames: ["/app-template/"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch"],
      ignoreTests: false
    },
    {
      description: "Auto-merge trusted GitHub Actions",
      matchManagers: ["github-actions"],
      matchPackageNames: [
        "/^actions\\//",
        "/^renovatebot\\//",
        "/^tj-actions\\//",
        "/^peter-evans\\//",
        "/^mshick\\//",
        "/^docker:\\//"
      ],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch", "digest"],
      minimumReleaseAge: "1 minute",
      ignoreTests: true
    }
  ]
}
