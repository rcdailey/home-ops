{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:best-practices",
    "docker:enableMajor",
    "docker:pinDigests",
    "security:openssf-scorecard",
    ":automergeBranch",
    ":automergeDigest",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":semanticCommits",
    ":timezone(America/New_York)",
    "helpers:pinGitHubActionDigestsToSemver",
    "github>robert-sandor/home-ops//.renovate/autoMerge.json5",
    "github>robert-sandor/home-ops//.renovate/groups.json5",
    "github>robert-sandor/home-ops//.renovate/labels.json5",
    "github>robert-sandor/home-ops//.renovate/semanticCommits.json5",
    "github>robert-sandor/home-ops//.renovate/customManagers.json5"
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  dependencyDashboardAutoclose: true,
  suppressNotifications: [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  configMigration: true,
  platformCommit: "enabled",
  rebaseWhen: "auto",
  schedule: ["every weekend"],
  minimumReleaseAge: "3 days",
  prConcurrentLimit: 5,
  prHourlyLimit: 2,
  ignorePresets: ["mergeConfidence:all-badges"],
  ignorePaths: [
    "**/*.sops.*",
    "**/resources/**"
  ],
  flux: {
    managerFilePatterns: ["/(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$/"]
  },
  "helm-values": {
    managerFilePatterns: ["/(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$/"]
  },
  helmfile: {
    managerFilePatterns: ["/(^|/)helmfile\\.ya?ml(?:\\.j2)?$/"]
  },
  kubernetes: {
    managerFilePatterns: ["/(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$/"]
  },
  kustomize: {
    managerFilePatterns: ["/^kustomization\\.ya?ml(?:\\.j2)?$/"]
  },
  "pre-commit": {
    enabled: true
  }
}
