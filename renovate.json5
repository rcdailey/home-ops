{
  // !!! IMPORTANT NOTICE !!!
  // Modular renovate configuration is in the `.renovate/` directory!
  //
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:best-practices",
    "docker:enableMajor",
    "docker:pinDigests",
    "security:openssf-scorecard",
    ":automergeBranch",
    ":automergeDigest",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":semanticCommits",
    ":timezone(America/Chicago)",
    "helpers:pinGitHubActionDigestsToSemver",
    "github>rcdailey/home-ops//.renovate/autoMerge.json5",
    "github>rcdailey/home-ops//.renovate/groups.json5",
    "github>rcdailey/home-ops//.renovate/labels.json5",
    "github>rcdailey/home-ops//.renovate/semanticCommits.json5",
    "github>rcdailey/home-ops//.renovate/customManagers.json5"
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  dependencyDashboardAutoclose: true,
  suppressNotifications: [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  configMigration: true,
  schedule: ["every weekday"],
  prConcurrentLimit: 15,
  prHourlyLimit: 8,
  ignorePresets: ["mergeConfidence:all-badges"],
  ignorePaths: [
    "**/*.sops.*",
    "**/resources/**"
  ],
  "pre-commit": {
    enabled: true
  }
}
